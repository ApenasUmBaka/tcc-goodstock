                consectetur adipiscing elit. Donec sit amet faucibus nisl. Mauris eu
                orci sed leo finibus vulputate auctor ut leo. Cras ullamcorper varius
                sodales.
                </p>
            <textarea class="--padding --margin">aaaa</textarea> <br>
        <button class="--padding --margin"><a href="/index.ejs">Click me</a></button>
    </section>
    <!-- Statics Home  -->
    <section id="section-statics" style="display:none;">

    </section>
    <!-- Stock Home -->
    <section id="section-stock" style="display:none;">
        <div class="--text">Controle de estoque</div>
        <div id="div-products-list">
            <div class="div-products-header">
                <span class="span-products-header">Quantidade</span>
                <span class="span-products-header">Nome</span>
                <span class="span-products-header">Valor</span>
            </div>
        </div>
    </section>
    <!-- Analytics Home -->
    <section id="section-analytics" style="display:none;">

    </section>
    <!-- Teams Home -->
    <section id="section-teams" style="display:none;">

    </section>
    <!-- Settings Home -->
    <section id="section-settings" style="display:none;">

    </section>
    <!-- Profile Home -->
    <section id="section-profile" style="display:none;">

    </section>

    <!-- Scripts -->
    <script src="/assets/scripts/workspace/utils.js"></script>
    <script src="/assets/scripts/workspace/productsModel.js"></script>
    <script src="/assets/scripts/workspace/productsController.js"></script>

    <script src="/assets/scripts/workspace/eventsDefinition.js"></script>
</body>

</html>